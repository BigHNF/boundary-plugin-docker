{
  "name" : "Boundary Docker Plugin",
  "version" : "0.9.1",
  "meterVersionRequired" : "4.2.0-611",
  "unsupportedPlatforms" : [ ],
  "tags" : "docker",
  "description": "Docker Boundary Plugin",
  "icon" : "icon.png",
  "command": "boundary-meter init.lua",
  "command_lua" : "boundary-meter init.lua",
  "postExtract" : "",
  "postExtract_lua" : "",

  "metrics" : [
    "DOCKER_TOTAL_CPU_USAGE",
    "DOCKER_MEMORY_USAGE_BYTES",
    "DOCKER_MEMORY_USAGE_PERCENT",
    "DOCKER_MEAN_MEMORY_USAGE",
    "DOCKER_NETWORK_RX_BYTES",
    "DOCKER_NETWORK_TX_BYTES",
    "DOCKER_NETWORK_RX_PACKETS",
    "DOCKER_NETWORK_TX_PACKETS",
    "DOCKER_NETWORK_RX_ERRORS",
    "DOCKER_NETWORK_TX_ERRORS"
  ],
  "dashboards": [
    {
      "name" : "Docker Summary",
      "layout" : "d-w=3&d-h=2&d-pad=5&d-bg=none&d-g-DOCKER_TOTAL_CPU_USAGE=0-0-1-1&d-g-DOCKER_MEMORY_USAGE_PERCENT=1-0-1-1&d-g-DOCKER_MEMORY_USAGE_BYTES=2-0-1-1&d-g-DOCKER_NETWORK_RX_ERRORS=0-1-1-1-t&d-g-DOCKER_NETWORK_TX_ERRORS=0-1-1-1-b&d-g-DOCKER_NETWORK_RX_BYTES=1-1-1-1&d-g-DOCKER_NETWORK_TX_BYTES=2-1-1-1"
    }
  ],
  "paramSchema": [
    {
      "title": "Host",
      "name": "host",
      "description": "The Docker Daemon hostname",
      "type": "string",
      "default": "127.0.0.1",
      "required" : true
    },
    {
      "title" : "Port",
      "name" : "port",
      "description" : "The Docker Daemon port",
      "type" : "integer",
      "default" : 2375,
      "required" : true
    },
    {
      "title": "Poll Interval (ms)",
      "name": "pollInterval",
      "description": "The Poll Interval (in milliseconds) to poll for metrics.",
      "type": "integer",
      "default": 1000,
      "required": false
    },
    {
      "title" : "Source",
      "name" : "source",
      "description" : "The Source to display in the legend for the data. It will default to the hostname of the server",
      "type" : "string"
    }
  ]
}
